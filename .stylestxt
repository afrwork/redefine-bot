body {
    font-family: 'Roboto', Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #2c2727;
}

.chat-container {
    max-width: 600px;
    margin: 50px auto;
    background-color: #a0cefc;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 20px;
    overflow: hidden;
}

.chat-header {
    background-color: #007bff;
    color: #ffffff;
    padding: 20px;
    text-align: center;
}

.chat-box {
    max-height: 300px;
    overflow-y: auto;
    padding: 20px;
}

.user-message {
    background-color: #93e9be; /* Light blue for user messages */
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    font-family: 'Courier New', monospace; /* Monospace font */
}

.bot-message {
    background-color: #1589ff; /* Light gray for bot messages */
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    font-family: 'Courier New', monospace; /* Monospace font */
}

.user-input {
    padding: 20px;
    display: flex;
    align-items: center;
}

input {
    flex: 1;
    padding: 15px;
    border: 1px solid #ced4da;
    border-radius: 5px;
}

button {
    background-color: #007bff;
    color: #ffffff;
    padding: 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-left: 10px;
}
